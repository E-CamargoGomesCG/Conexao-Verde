<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Verde">

    <ImageView
        android:id="@+id/tip_logo"
        android:src="@drawable/vector_7"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tip_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tip_logo"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:text="Cultive a Vida, Cultive o Futuro." />

    <TextView
        android:id="@+id/tip_subtitle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tip_title"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        tools:text="Transforme seu jardim em um oásis verde e sustentável com a ajuda da tecnologia." />

    <android.widget.Button
        android:id="@+id/returnToHomeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tip_subtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:text="Começar!"
        android:textSize="20dp"
        android:background="@drawable/button_darkgreen"
        android:textColor="@color/white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"/>



</RelativeLayout>